<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <LinearLayout
        android:id="@+id/home_layout_signup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/orange_box_signup"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:background="@drawable/rounded_orange_square"
                android:backgroundTint="@color/orange"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/logo_signup"
                android:layout_width="189dp"
                android:layout_height="137dp"
                android:layout_above="@id/name_signup"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-1dp"
                android:src="@drawable/catchow_logo" />

            <TextView
                android:id="@+id/name_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/orange_box_signup"
                android:fontFamily="@font/museo_sans_rounded_1000"
                android:gravity="center"
                android:text="CatChow"
                android:textColor="@color/brown"
                android:textSize="60sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/museo_sans_rounded_900"
            android:text="Sign Up"
            android:textColor="#8B4513"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_fullname_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_signup"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/museo_sans_rounded_500"
            android:text="Full name"
            android:textColor="#B9B1B1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_fullname_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_fullname_signup"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="45dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:id="@+id/line1_fullname_signup"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/edittext_fullname_signup"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black" />

        <!-- Email address field -->

        <TextView
            android:id="@+id/text_email_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1_fullname_signup"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/museo_sans_rounded_500"
            android:text="Email address"
            android:textColor="#B9B1B1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_email_signup"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="45dp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:id="@+id/line1_email_signup"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/edittext_email_signup"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/text_pass_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1_email_signup"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/museo_sans_rounded_500"
            android:text="Password"
            android:textColor="#B9B1B1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edittext_pass_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_pass_signup"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="45dp"
            android:background="@android:color/transparent"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:id="@+id/line1_pass_signup"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/edittext_pass_signup"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/black" />

        <!-- Re-enter password field -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/click_signup"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/museo_sans_rounded_500"
                android:text="Sign up"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="⎯⎯⎯⎯⎯⎯⎯   OR ⎯⎯⎯⎯⎯⎯⎯"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/click_signup" />

            <Button
                android:id="@+id/google_button2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background_transparent"
                android:backgroundTint="@color/background"
                android:backgroundTintMode="src_atop"
                android:drawableStart="@drawable/google_logo"
                android:drawablePadding="8dp"
                android:fontFamily="@font/museo_sans_rounded_500"
                android:gravity="center"
                android:text="Continue with Google"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_or" />

            <Button
                android:id="@+id/log_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/google_button"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/museo_sans_rounded_700"
                android:text="Already have an account? Login"
                android:textColor="#8B4513"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/google_button2" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>