<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_rv_button_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/history_rv_button_card"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/item_background"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history_rv_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fast_food_logo"
                android:layout_width="85dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mcdo_logo" />

            <TextView
                android:id="@+id/fast_food_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/museo_sans_rounded_700"
                android:text="Storename"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/fast_food_logo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/reorder_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reorder →"
                android:textColor="@color/skyblue"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/fast_food_logo"
                app:layout_constraintTop_toBottomOf="@id/fast_food_label" />

            <TextView
                android:id="@+id/leave_review_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Review →"
                android:textColor="@color/skyblue"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/fast_food_logo"
                app:layout_constraintTop_toBottomOf="@id/reorder_button" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
